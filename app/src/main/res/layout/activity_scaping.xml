<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawerLayout"
    android:layout_height="match_parent"
    tools:context=".scaping">

    <!--    Your code will sit in here-->

    <RelativeLayout
        android:id="@+id/btnlandenroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingBottom="40dp">

        <!-- Image at the Top Left Corner -->
        <ImageView
            android:id="@+id/courseImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/etn" />

        <!-- Top Left Button -->
        <Button
            android:id="@+id/btnlifeback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/courseImageView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="#00FF00"
            android:text="Back"
            android:textColor="#000000" />

        <!-- Top Right Button -->


        <!-- Course Title -->
        <TextView
            android:id="@+id/courseTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnlifeback"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Landscaping"
            android:textColor="#4CAF50"
            android:textSize="44sp"
            android:textStyle="bold" />

        <!-- Course Fees -->
        <TextView
            android:id="@+id/courseFeesTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/courseTitleTextView"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="#FFFFFF"
            android:text="Fees: R1500"
            android:elevation="4dp"
            android:textSize="18sp" />

        <!-- Course Purpose -->
        <TextView
            android:id="@+id/coursePurposeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/courseFeesTextView"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:padding="10dp"
            android:text="Purpose: To provide landscaping services for new and established gardens" />

        <!-- Course Content -->
        <TextView
            android:id="@+id/courseContentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/coursePurposeTextView"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Content:"
            android:textStyle="bold" />

        <!-- Course Subtopics -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/courseContentTextView"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="15dp">

            <!-- Subtopic: Indigenous and Exotic Plants and Trees -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="• Indigenous and exotic plants and trees"
                android:textSize="16sp" />

            <!-- Subtopic: Fixed Structures -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="• Fixed structures (fountains, statues, benches, tables, built-in braai)"
                android:textSize="16sp" />

            <!-- Subtopic: Balancing of Plant and Trees -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="• Balancing of plant and trees in a garden"
                android:textSize="16sp" />

            <!-- Subtopic: Aesthetics of Plant Shapes and Colours -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="• Aesthetics of plant shapes and colours"
                android:textSize="16sp" />

            <!-- Subtopic: Garden Layout -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="• Garden layout"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Bottom Button -->
        <Button
            android:id="@+id/btnlifeenroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:background="#00FF00"
            android:text="Enroll"
            android:textColor="#000000" />

    </RelativeLayout>



    <!--    NAVIGATION CODE-->

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_drawer_menu"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"/>

</androidx.drawerlayout.widget.DrawerLayout>