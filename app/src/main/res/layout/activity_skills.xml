<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawerLayout"
    android:layout_height="match_parent"
    tools:context=".skills">

    <!--    Your code will sit in here-->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingBottom="40dp"
        android:background="@drawable/bglite"
        >

        <!-- Image at the Top Left Corner -->
        <ImageView
            android:id="@+id/courseImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/etn" />

        <!-- Top Left Button -->
        <Button
            android:id="@+id/btnlifeskillback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/courseImageView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="#00FF00"
            android:text="Back"
            android:textColor="#000000" />

        <!-- Top Right Button -->
        <Button
            android:id="@+id/btnlifeskillnext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/courseImageView"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="#00FF00"
            android:text="Next"
            android:textColor="#000000" />

        <!-- Course Title -->
        <TextView
            android:id="@+id/courseTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnlifeskillback"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Life Skills"
            android:textColor="#4CAF50"
            android:textSize="44sp"
            android:textStyle="bold" />

        <!-- Course Fees -->
        <TextView
            android:id="@+id/courseFeesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fees: R1500"
            android:textSize="18sp"
            android:layout_below="@id/courseTitleTextView"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp" />

        <!-- Course Purpose -->
        <TextView
            android:id="@+id/coursePurposeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Purpose: To provide skills to navigate basic life necessities"
            android:layout_below="@id/courseFeesTextView"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp" />

        <!-- Course Content -->
        <TextView
            android:id="@+id/courseContentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Content:"
            android:textStyle="bold"
            android:layout_below="@id/coursePurposeTextView"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp" />

        <!-- Course Subtopics -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/courseContentTextView"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp">

            <!-- Subtopic: Opening a Bank Account -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Opening a bank account"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <!-- Subtopic: Basic Labour Law -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Basic labour law (know your rights)"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <!-- Subtopic: Basic Reading and Writing Literacy -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Basic reading and writing literacy"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <!-- Subtopic: Basic Numeric Literacy -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Basic numeric literacy"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

        </LinearLayout>

        <!-- Bottom Button -->
        <Button
            android:id="@+id/btnlifeskillenroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:background="#00FF00"
            android:text="Enroll"
            android:textColor="#000000" />

    </RelativeLayout>



    <!--    NAVIGATION CODE-->

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_drawer_menu"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"/>

</androidx.drawerlayout.widget.DrawerLayout>